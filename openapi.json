{
  "openapi": "3.0.1",
  "info": {
    "title": "LinkedIn Content Helper API",
    "version": "1.0.0",
    "description": "API pour générer des idées de posts LinkedIn à partir de profils."
  },
  "servers": [
    {
      "url": "https://fresh-linkedin-profile-data.p.rapidapi.com",
      "description": "RapidAPI LinkedIn Scraper"
    }
  ],
  "paths": {
    "/get-linkedin-profile": {
      "get": {
        "summary": "Récupère les infos du profil LinkedIn",
        "operationId": "getUserProfile",
        "parameters": [
          {
            "name": "linkedin_url",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "L'URL du profil LinkedIn à analyser"
          }
        ],
        "responses": {
          "200": {
            "description": "Succès"
          }
        }
      }
    }
  }
}
